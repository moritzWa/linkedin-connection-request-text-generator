{
    "name": "LinkedIn Connection Invitation Note Generator",
    "description": "Generate connection invitation notes for LinkedIn",
    "manifest_version": 2,
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
        "fill-connection-template": {
            "suggested_key": {
                "default": "Shift+Ctrl+E",
                "mac": "Shift+Command+E"
            },
            "description": "Fill connection template"
        }
    },
    "permissions": ["declarativeContent", "activeTab", "storage", "commands", "clipboardWrite", "tabs"],
    "content_scripts": [
        {
            "matches": ["*://*.linkedin.com/*"],
            "js": ["main.js"]
        }
    ]
}
