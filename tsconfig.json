{
    "exclude": [
        "node_modules",
        "build",
        "build-bookmarklet",
        "build-browserext",
        "webstore-zips",
        "scratch"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "checkJs": true,
        "noEmit": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "declaration": false,
        "noImplicitAny": true,
        "maxNodeModuleJsDepth": 0,
        "target": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}